---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Section from "../components/Section.astro";
import OurStory from "../components/OurStory.astro";
import EventDetails from "../components/EventDetails.astro";
import Venue from "../components/Venue.astro";
import Parking from "../components/Parking.astro";
import RSVP from "../components/RSVP.astro";
import BridalParty from "../components/BridalParty.astro";
import Gallery from "../components/Gallery.astro";
import Registry from "../components/Registry.astro";
import FAQ from "../components/FAQ.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
  <Header />
  <main>
    <Hero />

    <!-- Section 2: Our Story -->
    <Section
      id="our-story"
      title="Our Story"
      subtitle="How we met and fell in love"
      variant="cream"
    >
      <OurStory />
    </Section>

    <!-- Section 3: Event Details -->
    <Section
      id="details"
      title="Event Details"
      subtitle="Join us for our special day"
    >
      <EventDetails />
    </Section>

    <!-- Section 4: Venue -->
    <Section
      id="venue"
      title="Venue"
      subtitle="Where to find us"
      variant="cream"
    >
      <Venue />
    </Section>

    <!-- Section 5: Parking -->
    <Section id="parking" title="Parking" subtitle="Parking information">
      <Parking />
    </Section>

    <!-- Section 6: RSVP -->
    <Section
      id="rsvp"
      title="RSVP"
      subtitle="Let us know if you can make it"
      variant="cream"
    >
      <RSVP />
    </Section>

    <!-- Section 7: Bridal Party -->
    <Section
      id="bridal-party"
      title="Bridal Party"
      subtitle="Our favorite people"
    >
      <BridalParty />
    </Section>

    <!-- Section 8: Gallery -->
    <Section
      id="gallery"
      title="Gallery"
      subtitle="Our journey together"
      variant="cream"
    >
      <Gallery />
    </Section>

    <!-- Section 9: Registry -->
    <Section id="registry" title="Registry" subtitle="Gift ideas">
      <Registry />
    </Section>

    <!-- Section 10: FAQ -->
    <Section
      id="faq"
      title="FAQ"
      subtitle="Frequently asked questions"
      variant="cream"
    >
      <FAQ />
    </Section>

    <!-- Section 11: Contact -->
    <Section id="contact" title="Contact" subtitle="Get in touch">
      <Contact />
    </Section>
  </main>

  <Footer />
</Layout>
