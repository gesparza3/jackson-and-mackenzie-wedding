---
import Layout from "../layouts/Layout.astro";
import FloatingNav from "../components/FloatingNav.astro";
import Hero from "../components/Hero.astro";
import Section from "../components/Section.astro";
import OurStory from "../components/OurStory.astro";
import EventDetails from "../components/EventDetails.astro";
import Venue from "../components/Venue.astro";
import RSVP from "../components/RSVP.astro";
import BridalParty from "../components/BridalParty.astro";
import Gallery from "../components/Gallery.astro";
import Registry from "../components/Registry.astro";
import FAQ from "../components/FAQ.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
  <FloatingNav />
  <main>
    <Hero />

    <!-- Section 2: Event Details -->
    <Section
      id="details"
      title="Event Details"
      subtitle="Join us for our special day"
      variant="cream"
    >
      <EventDetails />
    </Section>

    <!-- Section 3: RSVP -->
    <Section id="rsvp" title="RSVP" subtitle="Let us know if you can make it">
      <RSVP />
    </Section>

    <!-- Section 4: Venue -->
    <Section
      id="venue"
      title="Venue"
      subtitle="Where to find us"
      variant="cream"
    >
      <Venue />
    </Section>

    <!-- Section 5: Our Story -->
    <Section
      id="our-story"
      title="Our Story"
      subtitle="How we met and fell in love"
    >
      <OurStory />
    </Section>

    <!-- Section 6: Bridal Party -->
    <Section
      id="bridal-party"
      title="Bridal Party"
      subtitle="Our favorite people"
      variant="cream"
      class="!py-10 md:!py-14"
    >
      <BridalParty />
    </Section>

    <!-- Section 7: Gallery -->
    <Section id="gallery" title="Gallery" subtitle="Our journey together">
      <Gallery />
    </Section>

    <!-- Section 8: Registry -->
    <Section
      id="registry"
      title="Registry"
      subtitle="Gift ideas"
      variant="cream"
    >
      <Registry />
    </Section>

    <!-- Section 9: FAQ -->
    <Section id="faq" title="FAQ" subtitle="Frequently asked questions">
      <FAQ />
    </Section>

    <!-- Section 10: Contact -->
    <Section
      id="contact"
      title="Contact"
      subtitle="Get in touch"
      variant="cream"
    >
      <Contact />
    </Section>
  </main>

  <Footer />
</Layout>
