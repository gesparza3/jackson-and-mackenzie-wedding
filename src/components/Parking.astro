---
import { Car, AlertCircle, Users } from "lucide-astro";
---

<div class="max-w-3xl mx-auto">
  <div class="grid md:grid-cols-2 gap-6">
    <!-- Parking Instructions -->
    <div
      class="bg-white rounded-2xl p-8 shadow-sm border border-[var(--color-sage-light)]/30"
    >
      <div class="flex items-start gap-4 mb-4">
        <div
          class="w-12 h-12 bg-[var(--color-sage-light)]/30 rounded-full flex items-center justify-center flex-shrink-0"
        >
          <Car class="w-6 h-6 text-[var(--color-sage-dark)]" />
        </div>
        <div>
          <h3 class="text-xl font-heading text-[var(--color-charcoal)] mb-2">
            Limited Parking
          </h3>
          <p class="text-[var(--color-gray)]">
            Parking is available on-site, but space is limited. Please follow
            the signs upon arrival to the designated parking area.
          </p>
        </div>
      </div>
    </div>

    <!-- Carpool Suggestion -->
    <div
      class="bg-white rounded-2xl p-8 shadow-sm border border-[var(--color-sage-light)]/30"
    >
      <div class="flex items-start gap-4 mb-4">
        <div
          class="w-12 h-12 bg-[var(--color-sage-light)]/30 rounded-full flex items-center justify-center flex-shrink-0"
        >
          <Users class="w-6 h-6 text-[var(--color-sage-dark)]" />
        </div>
        <div>
          <h3 class="text-xl font-heading text-[var(--color-charcoal)] mb-2">
            Consider Carpooling
          </h3>
          <p class="text-[var(--color-gray)]">
            If you're able to share a ride with other guests from your area, it
            would be a big help! Feel free to coordinate with friends and
            family.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
