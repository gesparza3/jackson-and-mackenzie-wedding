---
import { MapPin, Navigation, Hotel, Car, Users } from "lucide-astro";

const venueAddress = "2741 Taylor Rd, Penryn, CA 95663";
const googleMapsUrl = `https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(venueAddress)}`;
const googleMapsEmbed = `https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3115.8!2d-121.1!3d38.85!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMzjCsDUxJzAwLjAiTiAxMjHCsDA2JzAwLjAiVw!5e0!3m2!1sen!2sus!4v1`;
---

<div class="max-w-4xl mx-auto">
  <!-- Venue Info -->
  <div class="grid lg:grid-cols-2 gap-8 mb-8">
    <!-- Address Card -->
    <div
      class="bg-white rounded-2xl p-8 shadow-sm border border-[var(--color-sage-light)]/30"
    >
      <div class="flex items-start gap-4 mb-6">
        <div
          class="w-12 h-12 bg-[var(--color-sage-light)]/30 rounded-full flex items-center justify-center flex-shrink-0"
        >
          <MapPin class="w-6 h-6 text-[var(--color-sage-dark)]" />
        </div>
        <div>
          <h3 class="text-xl font-heading text-[var(--color-charcoal)] mb-1">
            The Justice Residence
          </h3>
          <p class="text-[var(--color-gray)]">{venueAddress}</p>
        </div>
      </div>

      <a
        href={googleMapsUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 bg-[var(--color-sage)] hover:bg-[var(--color-sage-dark)] text-white px-6 py-3 rounded-full transition-colors"
      >
        <Navigation class="w-4 h-4" />
        Get Directions
      </a>
    </div>

    <!-- Hotels Card -->
    <div
      class="bg-white rounded-2xl p-8 shadow-sm border border-[var(--color-sage-light)]/30"
    >
      <div class="flex items-start gap-4 mb-6">
        <div
          class="w-12 h-12 bg-[var(--color-sage-light)]/30 rounded-full flex items-center justify-center flex-shrink-0"
        >
          <Hotel class="w-6 h-6 text-[var(--color-sage-dark)]" />
        </div>
        <div>
          <h3 class="text-xl font-heading text-[var(--color-charcoal)] mb-1">
            Nearby Hotels
          </h3>
          <p class="text-[var(--color-gray)]">Recommended accommodations</p>
        </div>
      </div>

      <ul class="space-y-3 text-[var(--color-gray)]">
        <li class="flex items-center gap-2">
          <span class="w-1.5 h-1.5 bg-[var(--color-sage)] rounded-full"></span>
          Holiday Inn Express Rocklin (~15 min)
        </li>
        <li class="flex items-center gap-2">
          <span class="w-1.5 h-1.5 bg-[var(--color-sage)] rounded-full"></span>
          Hampton Inn Auburn (~10 min)
        </li>
        <li class="flex items-center gap-2">
          <span class="w-1.5 h-1.5 bg-[var(--color-sage)] rounded-full"></span>
          Best Western Plus Auburn (~10 min)
        </li>
      </ul>
    </div>
  </div>

  <!-- Map Embed -->
  <div
    class="rounded-2xl overflow-hidden shadow-sm border border-[var(--color-sage-light)]/30 mb-12"
  >
    <iframe
      src={googleMapsEmbed}
      width="100%"
      height="400"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
      title="Venue Location Map"
      class="w-full"></iframe>
  </div>

  <!-- Parking Subsection -->
  <div id="parking" class="scroll-mt-24">
    <h3
      class="text-2xl font-heading text-[var(--color-charcoal)] text-center mb-8"
    >
      Parking Information
    </h3>
    <div class="grid md:grid-cols-2 gap-6">
      <!-- Parking Instructions -->
      <div
        class="bg-white rounded-2xl p-8 shadow-sm border border-[var(--color-sage-light)]/30"
      >
        <div class="flex items-start gap-4">
          <div
            class="w-12 h-12 bg-[var(--color-sage-light)]/30 rounded-full flex items-center justify-center flex-shrink-0"
          >
            <Car class="w-6 h-6 text-[var(--color-sage-dark)]" />
          </div>
          <div>
            <h4 class="text-xl font-heading text-[var(--color-charcoal)] mb-2">
              Limited Parking
            </h4>
            <p class="text-[var(--color-gray)]">
              Parking is available on-site, but space is limited. Please follow
              the signs upon arrival to the designated parking area.
            </p>
          </div>
        </div>
      </div>

      <!-- Carpool Suggestion -->
      <div
        class="bg-white rounded-2xl p-8 shadow-sm border border-[var(--color-sage-light)]/30"
      >
        <div class="flex items-start gap-4">
          <div
            class="w-12 h-12 bg-[var(--color-sage-light)]/30 rounded-full flex items-center justify-center flex-shrink-0"
          >
            <Users class="w-6 h-6 text-[var(--color-sage-dark)]" />
          </div>
          <div>
            <h4 class="text-xl font-heading text-[var(--color-charcoal)] mb-2">
              Consider Carpooling
            </h4>
            <p class="text-[var(--color-gray)]">
              If you're able to share a ride with other guests from your area,
              it would be a big help! Feel free to coordinate with friends and
              family.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
