---
// Minimal header - navigation handled by FloatingNav
---

<header
  id="site-header"
  class="absolute top-0 left-0 right-0 z-40 transition-all duration-300"
>
  <div class="container mx-auto px-4 py-6 flex items-center justify-center">
    <!-- Logo/Names - centered -->
    <a
      href="#hero"
      class="font-heading text-2xl md:text-3xl text-white hover:text-[var(--color-sage-light)] transition-colors drop-shadow-md"
    >
      Jackson <span class="text-[var(--color-charcoal)]">&</span> Mackenzie
    </a>
  </div>
</header>

<script>
  const header = document.getElementById("site-header");
  const heroSection = document.getElementById("hero");

  function updateHeaderStyle() {
    const heroHeight = heroSection?.offsetHeight || 500;
    const scrollY = window.scrollY;

    if (scrollY > heroHeight * 0.3) {
      // Scrolled past hero - hide header (floating nav takes over)
      header?.classList.add("opacity-0", "-translate-y-full");
    } else {
      // In hero area - show header
      header?.classList.remove("opacity-0", "-translate-y-full");
    }
  }

  let ticking = false;
  window.addEventListener("scroll", () => {
    if (!ticking) {
      window.requestAnimationFrame(() => {
        updateHeaderStyle();
        ticking = false;
      });
      ticking = true;
    }
  });

  updateHeaderStyle();
</script>
