---
import { Phone, AlertTriangle } from "lucide-astro";

const contactEmail = "jackson.and.mackenzie@example.com";
const contactPhone = "(916) 953-3076";
const coordinatorPhone = "(555) 555-5555"; // TODO: Add coordinator phone for urgent matters
---

<div class="max-w-2xl mx-auto text-center">
  <!-- Intro -->
  <p class="text-[var(--color-gray)] mb-10">
    Have questions? Please text us and we will get back to you as soon as we can.
  </p>

  <!-- Contact Card -->
  <div
    class="bg-white rounded-2xl p-6 sm:p-8 shadow-sm border border-[var(--color-sage-light)]/30 max-w-md mx-auto"
  >
    <div class="flex flex-col items-start gap-6">
      <!-- Text -->
      <div class="flex items-center gap-4">
        <div
          class="w-12 h-12 shrink-0 aspect-square rounded-full bg-[var(--color-sage-light)]/30 flex items-center justify-center"
        >
          <Phone class="w-5 h-5 text-[var(--color-sage-dark)]" />
        </div>
        <div class="text-left">
          <p class="text-sm text-[var(--color-gray)]">Text us at</p>
          <a
            href={`sms:${contactPhone.replace(/[()\\s-]/g, "")}`}
            class="text-[var(--color-charcoal)] hover:text-[var(--color-sage-dark)] transition-colors font-medium"
          >
            {contactPhone}
          </a>
        </div>
      </div>

      <!-- Divider -->
      <div class="w-full h-px bg-[var(--color-sage-light)]/30"></div>

      <!-- Urgent matters -->
      <div class="flex items-center gap-4">
        <div
          class="w-12 h-12 shrink-0 aspect-square rounded-full bg-[var(--color-sage-light)]/30 flex items-center justify-center"
        >
          <AlertTriangle class="w-5 h-5 text-[var(--color-sage-dark)]" />
        </div>
        <div class="text-left">
          <p class="text-sm text-[var(--color-charcoal)]">
            For urgent matters please contact our coordinator
            {coordinatorPhone ? (
              <> at <a
                href={`sms:${coordinatorPhone.replace(/[()\s-]/g, "")}`}
                class="font-medium text-[var(--color-sage-dark)] hover:underline"
              >
                {coordinatorPhone}
              </a></>
            ) : (
              "."
            )}
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Note -->
  <p class="text-sm text-[var(--color-gray)] mt-8">
    For wedding-day logistics updates, please continue to use the text number above.
  </p>
</div>
