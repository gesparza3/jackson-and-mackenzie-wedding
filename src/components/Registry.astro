---
import { ExternalLink, Gift } from "lucide-astro";

const registries = [
  {
    name: "Target",
    description: "Everyday essentials and home decor",
    url: "https://www.target.com/gift-registry/wedding",
    color: "bg-[#CC0000]",
  },
  {
    name: "Crate & Barrel",
    description: "Quality furniture and kitchen items",
    url: "https://www.crateandbarrel.com/gift-registry",
    color: "bg-[#1a1a1a]",
  },
  {
    name: "Honeymoon Fund",
    description: "Help us make lasting memories on our honeymoon",
    url: "https://withjoy.com/",
    color: "bg-[#4b7563]",
  },
  {
    name: "Household Fund",
    description: "Contribute toward home and newlywed life essentials",
    url: "https://withjoy.com/",
    color: "bg-[#6b7280]",
  },
];
---

<div class="max-w-3xl mx-auto">
  <!-- Intro -->
  <div class="text-center mb-10">
    <div
      class="w-16 h-16 bg-[var(--color-sage-light)]/30 rounded-full flex items-center justify-center mx-auto mb-4"
    >
      <Gift class="w-8 h-8 text-[var(--color-sage-dark)]" />
    </div>
    <p class="text-[var(--color-gray)] max-w-xl mx-auto">
      Your presence at our wedding is the greatest gift of all. However, if you
      wish to honor us with a gift, we've registered at the following stores.
    </p>
  </div>

  <!-- Registry Links -->
  <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
    {
      registries.map((registry) => (
        <a
          href={registry.url}
          target="_blank"
          rel="noopener noreferrer"
          class="group bg-white rounded-2xl p-6 shadow-sm border border-[var(--color-sage-light)]/30 hover:shadow-md transition-all text-center"
        >
          <div
            class={`w-12 h-12 ${registry.color} rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform`}
          >
            <span class="text-white font-bold text-lg">
              {registry.name.charAt(0)}
            </span>
          </div>
          <h3 class="text-lg font-heading text-[var(--color-charcoal)] mb-2">
            {registry.name}
          </h3>
          <p class="text-sm text-[var(--color-gray)] mb-4">
            {registry.description}
          </p>
          <span class="inline-flex items-center gap-1 text-sm text-[var(--color-sage-dark)] group-hover:underline">
            View Registry <ExternalLink class="w-3 h-3" />
          </span>
        </a>
      ))
    }
  </div>
</div>
