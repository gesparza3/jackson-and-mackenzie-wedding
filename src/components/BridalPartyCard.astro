---
interface Props {
  name: string;
  role: string;
  bio: string;
  image: string;
}

const { name, role, bio, image } = Astro.props;
---

<div
  class="bg-white rounded-2xl overflow-hidden shadow-sm border border-[var(--color-sage-light)]/30 group"
>
  <!-- Photo -->
  <div class="aspect-[3/4] overflow-hidden bg-[var(--color-cream)]">
    <img
      src={image}
      alt={name}
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
      loading="lazy"
      onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 300 400%22%3E%3Crect fill=%22%23b8c9a9%22 width=%22300%22 height=%22400%22/%3E%3Ctext x=%22150%22 y=%22200%22 text-anchor=%22middle%22 fill=%22%23fff%22 font-size=%2240%22%3EðŸ‘¤%3C/text%3E%3C/svg%3E'"
    />
  </div>

  <!-- Info -->
  <div class="p-6 text-center">
    <p
      class="text-sm text-[var(--color-sage-dark)] uppercase tracking-wider mb-1"
    >
      {role}
    </p>
    <h3 class="text-xl font-heading text-[var(--color-charcoal)] mb-2">
      {name}
    </h3>
    <p class="text-sm text-[var(--color-gray)] leading-relaxed">{bio}</p>
  </div>
</div>
