---
interface Props {
  name: string;
  role: string;
  bio: string;
  image: string;
}

const { name, role, bio, image } = Astro.props;
---

<div
  class="bg-white rounded-xl overflow-hidden shadow-sm border border-[var(--color-sage-light)]/30 group"
>
  <!-- Photo (click to expand) -->
  <button
    type="button"
    class="bp-thumb aspect-square w-full overflow-hidden bg-[var(--color-cream)] cursor-pointer"
    data-img={image}
    data-name={name}
    data-role={role}
    data-bio={bio}
    aria-label={`Open ${name} photo`}
  >
    <img
      src={image}
      alt={name}
      class="w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-300"
      loading="lazy"
      onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 300 300%22%3E%3Crect fill=%22%23b8c9a9%22 width=%22300%22 height=%22300%22/%3E%3Ctext x=%22150%22 y=%22160%22 text-anchor=%22middle%22 fill=%22%23fff%22 font-size=%2240%22%3EðŸ‘¤%3C/text%3E%3C/svg%3E'"
    />
  </button>

  <!-- Info -->
  <div class="p-3 md:p-4 text-center">
    <p
      class="text-xs text-[var(--color-sage-dark)] uppercase tracking-wider mb-0.5"
    >
      {role}
    </p>
    <h3
      class="text-base md:text-lg font-heading text-[var(--color-charcoal)] mb-1"
    >
      {name}
    </h3>
    <p
      class="text-xs md:text-sm text-[var(--color-gray)] leading-relaxed hidden md:block"
    >
      {bio}
    </p>
  </div>
</div>
